[
  "trigger", ".", {
    "name": "porylive_trigger",
    "expression": ["anyof",
      ["match", "data/*.s", "wholename"],
      ["match", "data/scripts/*.inc", "wholename"]
    ],
    "append_files": true,
    "command": ["python3", "tools/porylive/porylive_on_change.py", "pokeemerald_modern.map"]
  }
]
